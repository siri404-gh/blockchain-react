{
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "no-cond-assign": [
        "error",
        "always"
      ],
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        4
      ]
    }
}
